#include <DHT.h>
#include <DHT_U.h>

#define DHTPin 8
#define DHTTYPE DHT22

#define A      5   // Yellow wire
#define aMinus 7   // Orange wire
#define B      10  // Blue wire
#define bMinus 12  // Green wire

float readingX;
float readingY;
float readingZ;
float temperature = -300;
int value = 9; // Not a value used in the loop so good 
int value2 = 9; 
bool motorStatus = false;

// Define the number of steps per revolution (360° / 18° per step), as per datasheet
// Eg. to loop once, it would take 20 runs of the for loop in the rotation() function
int stepsPerRevolution = 20;

DHT dht(DHTPin, DHTTYPE);

void setup(){
  Serial.begin(9600);
  dht.begin();
  pinMode(2, OUTPUT); //X1, set pin modes
  pinMode(4, OUTPUT);//Y1
  pinMode(6, OUTPUT);//Z1

  pinMode(A, OUTPUT);
  pinMode(aMinus, OUTPUT);
  pinMode(B, OUTPUT);
  pinMode(bMinus, OUTPUT);

  pinMode(LED_BUILTIN, OUTPUT);
}

void loop() 
{ 
  if (Serial.available()){
    value = Serial.parseInt();
    delay(50);
    value2 = Serial.parseInt();
    delay(50);
    
    if (value == 0){
      X_axis();
    } else if (value == 1){
      Y_axis();
    } else if(value == 2){
      Z_axis();
    } else if(value == 3){
      Temp();
    }
    else if (value == 4){
      //flash(5);
      motorStatus = true;
    }
    else if (value == 5){
      axisReset();
    }
  }
  if (motorStatus) {
    rotation(value2); // Takes rotation value from the serial port
  }
}

void rotation(int angleInput){
  stepsPerRevolution = ((angleInput)*1.43)*3; 
  // 1.43 for how many degrees to roatate the gear, multiply by 3 for a 1:3 gear ratio
  for (int i = 0; i < stepsPerRevolution; i++) { 
    if (!motorStatus) return; // Stop if motor is not turning
    // Step 1
    digitalWrite(A, HIGH);
    digitalWrite(aMinus, LOW);
    digitalWrite(B, LOW);
    digitalWrite(bMinus, HIGH);
    delay(5);

    // Step 2
    digitalWrite(A, HIGH);
    digitalWrite(aMinus, LOW);
    digitalWrite(B, HIGH);
    digitalWrite(bMinus, LOW);
    delay(5);

    // Step 3
    digitalWrite(A, LOW);
    digitalWrite(aMinus, HIGH);
    digitalWrite(B, HIGH);
    digitalWrite(bMinus, LOW);
    delay(5);

    // Step 4
    digitalWrite(A, LOW);
    digitalWrite(aMinus, HIGH);
    digitalWrite(B, LOW);
    digitalWrite(bMinus, HIGH);
    delay(5);
    
  } 
  motorStatus = false;
}



void X_axis() {
  digitalWrite (2, LOW);
  digitalWrite (4, LOW);
  digitalWrite (6, LOW);
}
void Y_axis() {
  digitalWrite (2, LOW);
  digitalWrite (4, LOW);
  digitalWrite (6, HIGH);
}
void Z_axis(){
  digitalWrite (2, HIGH);
  digitalWrite (4, LOW);
  digitalWrite (6, LOW);
}

void axisReset() {
  //X
  digitalWrite (2, HIGH);
  //Y
  digitalWrite (4, HIGH);
  // Z
  digitalWrite (6, HIGH);
}

void Temp(){
  temperature = dht.readTemperature();
  if (isnan(temperature)) {
    Serial.println("Failed to read from DHT sensor");
  } else {
    Serial.print(temperature);
    Serial.println(" °C");
  }
}

void flash(int num) {
  for (int i = 0; i < num; i++) {
    digitalWrite(LED_BUILTIN, HIGH);
    delay(250);
    digitalWrite(LED_BUILTIN, LOW);
    delay(250);
  }
}
